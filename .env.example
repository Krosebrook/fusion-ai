# FlashFusion Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# BASE44 CONFIGURATION (Required)
# =============================================================================
# Your Base44 project URL
# Get this from: https://base44.com (after creating a project)
VITE_BASE44_URL=https://your-project.base44.com

# Base44 API Key (Optional, for serverless functions)
BASE44_API_KEY=your_base44_api_key_here

# =============================================================================
# AI MODEL API KEYS (Optional, for advanced AI features)
# =============================================================================

# OpenAI (GPT-4, GPT-3.5, DALL-E)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic Claude (Claude 3 family)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Google Gemini (Gemini 1.5 Pro/Flash)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_ai_key_here

# Custom/Self-hosted AI Models
CUSTOM_MODEL_URL=http://localhost:11434
CUSTOM_MODEL_API_KEY=your_custom_key_here

# =============================================================================
# INTEGRATION API KEYS (Optional, for specific integrations)
# =============================================================================

# GitHub Integration
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_github_personal_access_token

# GitLab Integration
GITLAB_TOKEN=glpat-your_gitlab_token

# Slack Integration
# Get from: https://api.slack.com/apps
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK

# Notion Integration
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_your_notion_key
NOTION_DATABASE_ID=your_database_id

# Airtable Integration
AIRTABLE_API_KEY=keyYourAirtableKey
AIRTABLE_BASE_ID=appYourBaseId

# =============================================================================
# CLOUD PROVIDER CREDENTIALS (Optional, for deployments)
# =============================================================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Azure
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# Vercel
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_org_id
VERCEL_PROJECT_ID=your_project_id

# =============================================================================
# DATABASE & STORAGE (Optional, for advanced features)
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/flashfusion

# MongoDB
MONGODB_URI=mongodb://localhost:27017/flashfusion

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry (Error Tracking)
# Get from: https://sentry.io/
VITE_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project

# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# PostHog (Product Analytics)
VITE_POSTHOG_KEY=phc_your_posthog_key
VITE_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# EMAIL SERVICE (Optional, for notifications)
# =============================================================================

# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@flashfusion.dev

# Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com

# =============================================================================
# PAYMENT PROCESSING (Optional, for Commerce features)
# =============================================================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# SEARCH & INDEXING (Optional)
# =============================================================================

# Algolia
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key
ALGOLIA_INDEX_NAME=flashfusion_index

# =============================================================================
# AUTOMATION PLATFORMS (Optional)
# =============================================================================

# n8n
N8N_URL=https://your-n8n-instance.com
N8N_API_KEY=your_n8n_api_key

# Zapier
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR/WEBHOOK

# Make (formerly Integromat)
MAKE_WEBHOOK_URL=https://hook.integromat.com/YOUR/WEBHOOK

# =============================================================================
# E-COMMERCE (Optional)
# =============================================================================

# Shopify
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_STORE_URL=your-store.myshopify.com

# =============================================================================
# AI/ML SERVICES (Optional)
# =============================================================================

# Hugging Face
HUGGINGFACE_API_KEY=hf_your_huggingface_token

# Replicate
REPLICATE_API_TOKEN=r8_your_replicate_token

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# API URL (for local development)
VITE_API_URL=http://localhost:3001

# Environment
NODE_ENV=development

# Debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret (for session management)
JWT_SECRET=your_random_secure_secret_min_32_chars

# Session encryption key
SESSION_SECRET=another_random_secure_secret

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable features
ENABLE_AI_STUDIO=true
ENABLE_CICD=true
ENABLE_PLUGINS=true
ENABLE_COMMERCE=false
ENABLE_ANALYTICS=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. NEVER commit your .env file to version control
# 2. Keep this .env.example file updated with new variables
# 3. Use strong, unique values for secrets
# 4. Rotate API keys regularly
# 5. Use different keys for development and production
# 6. Store production secrets in a secure vault (e.g., Base44 Secrets)
# 
